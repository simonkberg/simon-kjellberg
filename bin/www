#!/usr/bin/env node

import '../env.js'

/**
 * Load New Relic performance monitoring
 */

import 'newrelic'

/**
 * Module dependencies.
 */

import app from '../app'
import http from 'http'
import debug from 'debug'

// debug
const log = debug('SK:app')

/**
 * Get port from environment and store in Express.
 */

const port = normalizePort(process.env.PORT || '3000')
app.set('port', port)

/**
 * Create HTTP server.
 */

const server = http.createServer(app)

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(app.get('port'))

/**
 * Event listener for HTTP server "error" event.
 */

server.on('error', (error) => {
  if (error.syscall !== 'listen') {
    throw error
  }

  let bind = isStr(port) ? ('Pipe ' + port) : ('Port ' + port)

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges')
      process.exit(1)
      break
    case 'EADDRINUSE':
      console.error(bind + ' is already in use')
      process.exit(1)
      break
    default:
      throw error
  }
})

/**
 * Event listener for HTTP server "listening" event.
 */

server.on('listening', () => {
  let addr = server.address()
  let bind = isStr(addr) ? ('pipe ' + addr) : ('port ' + addr.port)

  log('Listening on ' + bind)
})

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort (val) {
  let port = parseInt(val, 10)

  // named pipe
  if (isNaN(port)) return val

  // port number
  if (port >= 0) return port

  return false
}

/**
 * Check if provided attribute is a string
 */

function isStr (attr) {
  return (typeof attr === 'string')
}
